<div class="mt-4 container" style="padding: 64px 0;">
    <h1 style="padding: 12px 0; text-align: center">Add Product</h1>
    <form method="POST" action="/collection/store">
        <div class="form-group">
            <label for="name">Name</label>
            <input required type="text" class="form-control" id="name" name="name" />
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input required type="text" class="form-control" id="description" name="description" />
        </div>
        <div class="form-group">
            <label for="videoId">Image</label>
            <input required type="text" class="form-control" id="image" name="image" />
        </div>
        <div class="form-group">
            <label for="level">Price</label>
            <input required type="text" class="form-control" id="price" name="price" />
        </div>
        <div style="margin: 12px 0">
            <div class="form-group">
                <label for="category">Category</label>
                <input type="text" list="mySuggestions" id="category" name="category">
                <datalist id="mySuggestions">
                    <option value="Bike">
                    <option value="Parts">
                    <option value="Gear">
                    <option value="Sale">
                </datalist>
            </div>
            <button type="submit" class="btn btn-primary btn-lg" style="float: right; margin: 12px 0;">Add
                Product</button>
        </div>
    </form>
</div>