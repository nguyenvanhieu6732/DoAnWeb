<div class="container mt-4" style="padding: 32px 0;">
  <a href="/collection/create">
    <button type="button" class="btn btn-primary btn-lg">Add Product</button>
  </a>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">STT</th>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">Create At</th>
        <th scope="col"><i class="fa-solid fa-sliders"></i></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each bike}}
      <tr>
        <th scope="row">{{sum @index 1}}</th>
        <td>{{this.name}}</td>
        <td>{{this.price}}</td>
        <td>{{this.createdAt}}</td>
        <td>
          <a href="/collection/{{this._id}}/edit" class="btn btn-link" style="font-size: 16px;">Sua</a>
          <a href="#!" class="btn btn-link" data-toggle="modal" data-id="{{this._id}}" data-target="#exampleModal" style="font-size: large;">
            <i class="fa-regular fa-trash-can"></i></a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete Product</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this product?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button id="btnDelete" type="button" class="btn btn-primary">Delete</button>
      </div>
    </div>
  </div>
</div>

<form method="POST" name="delete-product-form"></form>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    var idProduct;
    var deleteForm = document.forms["delete-product-form"]
    var btnDelete = document.getElementById("btnDelete")

    $('#exampleModal').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget)
      idProduct = button.data('id')
    })

    btnDelete.onclick = function () {
      deleteForm.action = '/collection/delete/' + idProduct + "?_method=DELETE";
      deleteForm.submit()
    }
  })
</script>